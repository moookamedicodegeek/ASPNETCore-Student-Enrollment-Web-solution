    <script>
        // Custom JavaScript for controlling carousel pause/resume
        document.addEventListener("DOMContentLoaded", function () {
            var myCarousel = document.getElementById('carouselExampleControls');
            var carousel = new bootstrap.Carousel(myCarousel, {
                interval: 3000, // Adjust carousel speed (in milliseconds)
            });

            // Pause/resume carousel on button click
            var pauseButton = document.querySelector('.pause-carousel');
            pauseButton.addEventListener('click', function () {
                if (pauseButton.getAttribute('aria-pressed') === 'false') {
                    carousel.pause();
                } else {
                    carousel.cycle();
                }
            });
        });
    </script>
